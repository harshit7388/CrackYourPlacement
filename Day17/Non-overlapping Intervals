class Solution {
    public int eraseOverlapIntervals(int[][] intervals) {
        
        if(intervals.length == 0 || intervals == null)
            return 0;
        
        Arrays.sort(intervals, (a,b) -> a[1] - b[1]); // sort array based on their finish time 
        int invalidCount = 0;
        
        /*let arr[i][j] =  i shows start time and j shows end time for each pair*/
        
        int prevalidEnd = intervals[0][1];  // used to store previous valid pair's end time to compare with current pairs start time. to check whether it overlaps any interval or not.
        
        for(int i= 1; i<intervals.length; i++){
            if(intervals[i][0] < prevalidEnd) // current pairs start time is < prev valid pairs end time
                invalidCount++;
            else 
                prevalidEnd = intervals[i][1];  // this is valid case to update previous valid end time  
        }
        return invalidCount;
    }
}
